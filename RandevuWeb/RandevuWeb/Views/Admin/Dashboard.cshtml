<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yönetici Paneli - Randevular</title>
    <!-- Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/adminDashboard.css" />
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- Main container -->
    <div class="flex min-h-screen">
        <!-- Sidebar (simplified) -->
        <div class="w-64 bg-white shadow-lg p-6 rounded-r-lg">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">Yönetici Paneli</h1>
            <nav class="space-y-2">
                <a href="#" class="block py-2.5 px-4 rounded-lg transition-all duration-200 hover:bg-gray-200 text-gray-700 font-medium">Randevular</a>
                <!-- You can add other admin links here -->
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-10">
            <div id="appointments-section" class="content-section active">
                <h2 class="text-3xl font-semibold text-gray-800 mb-6">Tüm Randevular</h2>
                
                <!-- Message Box -->
                <div id="appointments-message" class="hidden p-4 mb-4 text-sm rounded-lg" role="alert"></div>

                <!-- Appointments Table -->
                <div class="bg-white p-6 rounded-xl shadow-lg">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Doktor
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Hasta
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Tarih
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Saat
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Durum
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        İptal Nedeni
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="appointments-list" class="bg-white divide-y divide-gray-200">
                                <!-- Randevular buraya JavaScript ile dinamik olarak eklenecek -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cancellation Reason Modal -->
    <div id="cancellation-reason-modal" class="modal">
        <div class="modal-content">
            <h3 class="text-lg font-bold mb-4">İptal Nedeni</h3>
            <p id="modal-reason-text" class="text-gray-700 mb-4"></p>
            <button id="modal-close-btn" class="bg-red-500 text-white font-medium px-4 py-2 rounded-lg hover:bg-red-600 transition-colors">Kapat</button>
        </div>
    </div>

    <script src="~/js/adminDashboard.js"></script>

</body>
</html>
